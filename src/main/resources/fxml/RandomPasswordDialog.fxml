<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gacfox.mempass.controller.RandPasswordDialogController">
    <center>
        <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="59.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="141.0" minWidth="10.0"
                                   prefWidth="141.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                <Label text="位数" GridPane.rowIndex="2"/>
                <Label text="生成结果"/>
                <TextField fx:id="tfResult" editable="false" GridPane.columnIndex="1"/>
                <Spinner fx:id="spCount" editable="true" initialValue="15" max="50" min="6" GridPane.columnIndex="1"
                         GridPane.rowIndex="2"/>
                <Label text="字符空间" GridPane.rowIndex="3"/>
                <ChoiceBox fx:id="cbCharSpace" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#handleGenerateButton" text="生成" GridPane.columnIndex="1"
                        GridPane.rowIndex="4"/>
            </children>
        </GridPane>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
